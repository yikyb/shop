<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/img_special"
    app:layout_constraintTop_toTopOf="parent"
    android:scaleType="centerCrop"
    android:layout_width="match_parent"
    android:layout_height="200dp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/img_special"
        android:layout_marginTop="10dp"
        android:text="关爱"
        android:id="@+id/txt_title_special"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
<TextView
    app:layout_constraintTop_toBottomOf="@id/txt_title_special"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:text="专业"
    android:id="@+id/txt_subTitle_special"
    android:layout_marginTop="6dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/txt_subTitle_special"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorRed"
        android:text="0元起"
        android:id="@+id/txt_price_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        app:layout_constraintTop_toBottomOf="@id/txt_price_special"
        android:layout_marginTop="10dp"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>