<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<View
    app:layout_constraintTop_toTopOf="parent"
    android:background="#ccc"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/img_hot_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/txt_hot_name_home"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/img_hot_home"
        app:layout_constraintLeft_toRightOf="@id/img_hot_home"
        android:text="商品"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_hot_title_home"
        app:layout_constraintTop_toTopOf="@id/txt_hot_name_home"
        app:layout_constraintBottom_toBottomOf="@id/txt_hot_price_home"
        app:layout_constraintLeft_toRightOf="@id/img_hot_home"
        android:layout_marginLeft="10dp"
        android:text="内容"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_hot_price_home"
        android:text="￥699"
        android:textColor="#F44336"
        app:layout_constraintBottom_toBottomOf="@id/img_hot_home"
        app:layout_constraintLeft_toRightOf="@id/img_hot_home"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>