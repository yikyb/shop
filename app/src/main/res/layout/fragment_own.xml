<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_own"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/layout_userInfo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#353232"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center|left"
            android:layout_marginTop="30dp"
            android:src="@drawable/red_ni" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:text="点击登录"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/img_right_arrown" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="我的"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/layout_userInfo">

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:drawableTop="@drawable/img_order"
            android:gravity="center"
            android:text="我的订单" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:drawableTop="@drawable/img_discount"
            android:gravity="center"
            android:text="我的订单" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:drawableTop="@drawable/img_gift_card"
            android:gravity="center"
            android:text="我的订单" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/layout1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:drawableTop="@drawable/img_collect"
            android:gravity="center"
            android:text="我的收藏" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:drawableTop="@drawable/img_footprint"
            android:gravity="center"
            android:text="我的足迹" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:drawableTop="@drawable/img_welfare"
            android:gravity="center"
            android:text="会员福利" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/layout2">

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:drawableTop="@drawable/img_collect"
            android:gravity="center"
            android:text="地址管理" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:drawableTop="@drawable/img_footprint"
            android:gravity="center"
            android:text="账号安全" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:drawableTop="@drawable/img_welfare"
            android:gravity="center"
            android:text="联系客服" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/layout3">

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:drawableTop="@drawable/img_help"
            android:gravity="center"
            android:text="帮助中心" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:drawableTop="@drawable/img_feedback"
            android:gravity="center"
            android:text="意见反馈" />

        <TextView

            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/shape_txt_border_black"
            android:gravity="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>