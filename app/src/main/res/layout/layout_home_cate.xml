<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/img_cate_home"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="100dp"
    android:layout_height="100dp"/>
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/img_cate_home"
        app:layout_constraintRight_toRightOf="@id/img_cate_home"
        app:layout_constraintTop_toBottomOf="@id/img_cate_home"
        android:layout_marginTop="10dp"
        android:text="日式"
        android:textSize="14sp"
        android:id="@+id/txt_cate_name_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/img_cate_home"
        app:layout_constraintRight_toRightOf="@id/img_cate_home"
        app:layout_constraintTop_toBottomOf="@id/txt_cate_name_home"
        android:id="@+id/txt_cate_price_home"
        android:textColor="#F44336"
        android:text="￥599"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>